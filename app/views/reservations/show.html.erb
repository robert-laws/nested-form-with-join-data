<h1>Reservation Details</h1>

<h4>
  <%= format_date(@reservation) %>
</h4>

<p>Total Activity Time:
  <%= @total_time %>
</p>

<p>Selected activities for reservation</p>

<% @reservation.activities.each do |activity| %>
  <%= render partial: 'activities/details', locals: { activity: activity } %>
<% end %>